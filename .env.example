# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/autoclaimtoken

# Server Configuration
NODE_ENV=development
PORT=3001

# Blockchain RPC URLs (Optional - using free public RPCs by default)
ETHEREUM_RPC_URL=https://eth.llamarpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# Security
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60

# Recovery Engine Settings
MAX_RECOVERY_JOBS_PER_USER=10
DEFAULT_SUCCESS_FEE_PERCENTAGE=15
MIN_RECOVERY_AMOUNT=0.001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000